{
  "extends": "./tsconfig.json",
  "compilerOptions": {
      "types": ["jest", "node"],
      "noEmit": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "__tests__/mocks/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.json"
  ],
}
