{
  "name": "@dbbs/server-api",
  "version": "2.0.0",
  "description": "DBBs Server API",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "npx nest build",
    "clean": "npx rimraf .turbo node_modules dist bin coverage \"*.tsbuildinfo\" || exit 0",
    "dev": "npx nest start --watch",
    "format": "npx prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "npx eslint . --ext ts,tsx --max-warnings 0 --fix",
    "start": "npx nest start",
    "start:debug": "npx nest start --debug --watch",
    "start:pm2": "node src/cluster.js",
    "start:prod": "node dist/main",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --forceExit --coverage --verbose --testTimeout=10000000 --detectOpenHandles",
    "test:cov": "npx jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npx jest --config ./test/jest-e2e.json",
    "test:watch": "npx jest --watch",
    "docs:generate": "npx compodoc -p tsconfig.json",
    "docs:serve": "yarn docs:generate -s",
    "migrate:latest": "NODE_OPTIONS='--loader ts-node/esm' knex migrate:latest",
    "migrate:make": "NODE_OPTIONS='--loader ts-node/esm' knex migrate:make",
    "migrate:up": "NODE_OPTIONS='--loader ts-node/esm' knex migrate:up",
    "migrate:down": "NODE_OPTIONS='--loader ts-node/esm' knex migrate:down"
  },
  "dependencies": {
    "@dbbs/common": "*",
    "@dbbs/feature-config": "*",
    "@dbbs/nestjs-module-authz": "*",
    "@dbbs/nestjs-module-database": "*",
    "@dbbs/nestjs-module-health": "*",
    "@dbbs/nestjs-module-logger": "*",
    "@dbbs/nestjs-module-settings": "*",
    "@dbbs/nestjs-module-stripe": "*",
    "@dbbs/s3-log-transport": "*",
    "@nestjs/common": "10.4.1",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.4.1",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.1",
    "@nestjs/terminus": "10.2.3",
    "@serdnam/pino-cloudwatch-transport": "1.0.4",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "knex": "3.1.0",
    "nest-knexjs": "0.0.23",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pino": "9.3.2",
    "pm2": "5.4.2",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "sqlite": "5.1.1"
  },
  "devDependencies": {
    "@dbbs/eslint-config": "*",
    "@dbbs/jest-config": "*",
    "@dbbs/tsconfig": "*"
  }
}
