{
  "extends": ["@dbbs/tsconfig/base.json", "@strapi/typescript-utils/tsconfigs/server"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "noImplicitAny": false,
    "allowJs": true,
    "composite": false,
    "declaration": false
  },
  "include": [
    "./",
    "./**/*.ts",
    "./**/*.js",
    "src/**/*.json",
    "src/api/*"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**"
  ]
}
