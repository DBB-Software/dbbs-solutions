{
  "extends": "./tsconfig.json",
  "compilerOptions": {
      "types": ["node", "google-one-tap"]
  },
  "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx"
  ],
  "exclude": [
      "dist/",
      "jest.config.ts",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.test.tsx",
      "**/*.spec.tsx",
      "./src/testUtils/**/*"
  ]
}
